# ============================================
# 네이버 블로그 자동화 - 환경 변수 템플릿
# ============================================
# 사용법: 이 파일을 .env로 복사하고 실제 값을 입력하세요
# cp .env.example .env

# ===================
# Naver 계정 정보
# ===================
# 권장: 키체인 사용 (keyring 라이브러리)
# python -c "import keyring; keyring.set_password('naver_blog', 'your_id', 'your_password')"
NAVER_ID=your_naver_id
NAVER_PW=your_naver_password

# ===================
# AI API Keys
# ===================
# Claude Haiku 4.5 / Sonnet (https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google Gemini Pro (https://ai.google.dev/)
GOOGLE_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===================
# Google Cloud (Vertex AI Imagen 3)
# ===================
# GCP 프로젝트 ID (https://console.cloud.google.com/)
GCP_PROJECT_ID=your-gcp-project-id

# 서비스 계정 키 파일 경로 (Imagen 3 사용시 필수)
# 1. GCP Console > IAM > 서비스 계정 생성
# 2. Vertex AI User 역할 부여
# 3. JSON 키 다운로드
GOOGLE_APPLICATION_CREDENTIALS=./secrets/gcp-service-account.json

# Vertex AI 리전 (기본값: us-central1)
GCP_LOCATION=us-central1

# Perplexity API (https://www.perplexity.ai/settings/api)
PERPLEXITY_API_KEY=pplx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Brave Search API (백업, https://brave.com/search/api/)
BRAVE_API_KEY=BSAxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===================
# 데이터베이스
# ===================
# SQLite (로컬 개발용)
DATABASE_URL=sqlite:///./data/blog_bot.db

# PostgreSQL (프로덕션 권장)
# DATABASE_URL=postgresql://user:password@localhost:5432/blogbot

# ===================
# 보안 설정
# ===================
# 암호화 키 경로 (자동 생성됨)
ENCRYPTION_KEY_PATH=./secrets/encryption.key

# 세션 암호화 활성화
SESSION_ENCRYPTION=True

# ===================
# Rate Limiting
# ===================
# 하루 최대 포스팅 수
MAX_DAILY_POSTS=3

# 포스팅 간 최소 간격 (시간)
MIN_POST_INTERVAL_HOURS=6

# API 호출 간 대기 시간 (초)
API_COOLDOWN_SECONDS=60

# ===================
# 행동 시뮬레이션
# ===================
# 타이핑 속도 (밀리초)
TYPING_SPEED_MIN_MS=80
TYPING_SPEED_MAX_MS=180

# 마우스 이동 베지어 곡선 사용
MOUSE_MOVEMENT_BEZIER=True

# 인간다운 스크롤 활성화
SCROLL_SPEED_HUMAN_LIKE=True

# 헤드리스 모드 (False = 브라우저 창 표시)
HEADLESS=False

# CDP (Chrome DevTools Protocol) 설정
# 로컬에서 기존 Chrome 브라우저에 연결할 때 사용
# Docker/서버 환경에서는 False 권장
USE_CDP=False
CDP_TIMEOUT=3

# ===================
# 세션 관리
# ===================
# 세션 최대 유효 기간 (일)
SESSION_MAX_AGE_DAYS=7

# ===================
# 모니터링
# ===================
# Telegram Bot (https://t.me/BotFather)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=your_chat_id

# 알림 활성화
ENABLE_ALERTS=True

# Sentry DSN (에러 추적, 선택)
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ===================
# 콘텐츠 설정
# ===================
# 블로그 카테고리
BLOG_CATEGORY=암호화폐

# 기본 태그 (쉼표로 구분)
DEFAULT_TAGS=비트코인,암호화폐,AI자동매매,투자

# SEO 키워드 밀도 목표 (%)
SEO_KEYWORD_DENSITY=1.8

# ===================
# 개발 모드
# ===================
# 디버그 모드 (상세 로그 출력)
DEBUG=True

# 테스트 모드 (실제 업로드 하지 않음)
TEST_MODE=False

# 로그 레벨 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
